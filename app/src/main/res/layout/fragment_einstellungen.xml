<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/einstellen"
    tools:context="com.example.sefa.lunchvote_project.HintergrundEinstellung">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Einstellungen"
            android:id="@+id/textView6"
            android:layout_weight="0.11"
            android:textSize="30dp"
            android:gravity="center" />

        <Button
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:text="Hintergrundfarbe"
            android:id="@+id/hintergrundcolor"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05"
            android:textSize="20dp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Sprache"
            android:id="@+id/language"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_weight="0.04" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Schrift"
            android:id="@+id/schrift"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_weight="0.06" />

    </LinearLayout>

</FrameLayout>
