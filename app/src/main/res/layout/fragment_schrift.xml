<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Schrift">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Schrift"
            android:id="@+id/textView7"
            android:layout_gravity="center"
            android:layout_weight="0.30"
            android:gravity="center"
            android:textSize="50dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:weightSum="1">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="324dp"
                android:id="@+id/scrollView2"
                android:paddingLeft="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Normal"
                        android:id="@+id/textView8"
                        android:textSize="25dp"
                        android:clickable="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:width="200dp"
                        android:paddingLeft="10dp"
                        android:textIsSelectable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Kursiv"
                        android:id="@+id/textView9"
                        android:textSize="25dp"
                        android:clickable="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:width="200dp"
                        android:paddingLeft="10dp"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Serif"
                        android:id="@+id/textView10"
                        android:textSize="25dp"
                        android:clickable="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:width="200dp"
                        android:paddingLeft="10dp"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Monospace"
                        android:id="@+id/textView11"
                        android:textSize="25dp"
                        android:clickable="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:width="200dp"
                        android:paddingLeft="10dp"
                        android:typeface="monospace" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Courier"
                        android:id="@+id/textView19"
                        android:textSize="25dp"
                        android:clickable="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:width="200dp"
                        android:paddingLeft="10dp"
                        android:textIsSelectable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Weiß"
                        android:id="@+id/textView12"
                        android:textSize="25dp"
                        android:clickable="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:width="200dp"
                        android:paddingLeft="10dp"
                        android:visibility="visible"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Rot"
                        android:id="@+id/textView13"
                        android:textSize="25dp"
                        android:clickable="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:width="200dp"
                        android:paddingLeft="10dp"
                        android:textColor="#ff0000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Orange"
                        android:id="@+id/textView14"
                        android:textSize="25dp"
                        android:clickable="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:width="200dp"
                        android:paddingLeft="10dp"
                        android:textIsSelectable="false"
                        android:textColor="#ff9500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Green"
                        android:id="@+id/textView15"
                        android:textSize="25dp"
                        android:clickable="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:width="200dp"
                        android:paddingLeft="10dp"
                        android:textIsSelectable="false"
                        android:textColor="#08ff00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Blau"
                        android:id="@+id/textView16"
                        android:textSize="25dp"
                        android:clickable="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:width="200dp"
                        android:paddingLeft="10dp"
                        android:textIsSelectable="false"
                        android:textColor="#0022ff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Violett"
                        android:id="@+id/textView17"
                        android:textSize="25dp"
                        android:clickable="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:width="200dp"
                        android:paddingLeft="10dp"
                        android:textIsSelectable="false"
                        android:textColor="#9500ff" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="326dp">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="Standart"
                    android:id="@+id/defaultb"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="200dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="Speichern"
                    android:id="@+id/sbutton"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="Zurück"
            android:id="@+id/bbutton"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="50dp" />

    </LinearLayout>

</FrameLayout>
